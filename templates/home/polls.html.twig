{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="dropdown show">
        <a class="btn btn-secondary dropdown-toggle"
           href="#"
           role="button"
           id="dropdownMenuLink"
           data-toggle="dropdown"
           aria-haspopup="true"
           aria-expanded="false"
        >
            Polls
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="/poll/new/{{ app.user.id }}">Create Poll</a>
            {% if polls %}
                {% for poll in polls %}
                    <a class="dropdown-item" href="/poll/{{ poll.id }}">{{ poll.name }}</a>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}
