<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block head %}{% endblock %}
    </head>
    <body {% block body_attributes %}{% endblock %}>
        <!-- Navigation bar -->
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <!-- Title -->
            <a class="navbar-brand" href="/admin">NFQ Pulse</a>
            <!-- Links -->
            <div class="navbar-nav">
                <!-- User import page link -->
                {% if is_granted("ROLE_SUPER_ADMIN") %}
                    <a class="nav-item nav-link" href="/">User Import</a>
                {% endif %}
                <!-- Admin links -->
                {% if is_granted("ROLE_ADMIN") or is_granted("ROLE_SUPER_ADMIN") %}
                    <!-- Admin panel link -->
                    <a class="nav-item nav-link" href="/admin">Admin Panel</a>
                    <!-- Admin polls link -->
                    <a class="nav-item nav-link" href="/polls/{{ app.user.id }}">Polls</a>
                    <!-- Bot trigger link -->
                    <a class="nav-item nav-link" href="/trigger">Trigger Bot</a>
                {% endif %}
                <!-- Logout link -->
                {% if app.user %}
                    <a class="nav-item nav-link" href="/logout">Logout ({{ app.user.email }})</a>
                {% endif %}
            </div>
        </nav>
        <!-- Page container -->
        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
